---
export interface Props {
  customerImage: string;
  customerName: string;
  customerJob: string;
  paragraph: string;
}

const { customerImage, customerName, customerJob, paragraph } =
  Astro.props as Props;
---

<div class="shadow-md shadow-gray-300">
  <div class="px-6 py-8">
    <div class="grid gap-8">
      <p class="max-w-2xl">{paragraph}</p>
      <div class="flex gap-4 items-center">
        <div class="w-12 h-12">
          <img
            src={customerImage}
            alt={customerName}
            class="aspect-square rounded-full"
          />
        </div>
        <div class="grid gap-1">
          <div class="text-lg font-thin">{customerName}</div>
          <div class="text-gray-400 uppercase font-bold text-xs">
            {customerJob}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
